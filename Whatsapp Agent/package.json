{
  "name": "whatsapp-assistant",
  "version": "1.0.0",
  "description": "WhatsApp Assistant - schedule messages, summaries and questions",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder -mw --arm64 --x64",
    "build": "electron-builder -mw --arm64 --x64"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.yourname.yourapp",
    "productName": "WhatsApp-Assistant",
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "electron-store": "^11.0.2",
    "nodemailer": "^6.9.13",
    "openai": "^6.10.0",
    "pusher-js": "^8.4.0",
    "twilio": "^5.0.0",
    "ws": "^8.18.0"
  }
}