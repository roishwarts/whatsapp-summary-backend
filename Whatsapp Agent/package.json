{
  "name": "WhatsApp AppAssistant",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder -mw",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.yourname.yourapp",
    "productName": "WhatsApp Assistant",
    "mac": {
      "target": "dmg",
      "arch": ["x64", "arm64"],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "electron-store": "^11.0.2",
    "nodemailer": "^6.9.13",
    "openai": "^6.10.0",
    "pusher-js": "^8.4.0",
    "twilio": "^5.0.0",
    "ws": "^8.18.0"
  }
}
